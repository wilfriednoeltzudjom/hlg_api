{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": ["warn", { "varsIgnorePattern": "[iI]gnored", "args": "none" }],
    "no-new": "off",
    "no-eval": "off",
    "lines-between-class-members": "off"
  }
}
